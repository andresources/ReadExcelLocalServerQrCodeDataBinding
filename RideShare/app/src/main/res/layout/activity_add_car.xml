<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@drawable/bggg"
        android:layout_height="match_parent"
        tools:context=".activities.SearchrideActivity">


        <TextView
            android:text="Select Car Brand"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinCarBrand"
            android:singleLine="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/edittext_reg_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/CarBrand"
            android:scrollbars="none"
            android:spinnerMode="dropdown"/>

        <TextView
            android:text="Choose No Of Seats"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinNoOfSeats"
            android:singleLine="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/edittext_reg_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/noOfSeats"
            android:scrollbars="none"
            android:spinnerMode="dropdown"/>



        <TextView
            android:text="Select Car Colour"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/SpinCarColour"
            android:singleLine="true"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="@dimen/_8sdp"
            android:background="@drawable/edittext_reg_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/carColour"
            android:scrollbars="none"
            android:spinnerMode="dropdown"/>



        <TextView
            android:id="@+id/tv_carplate"
            android:text="Number Plate"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:textColor="#111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button

            android:id="@+id/bt_scan"
            android:text="Scan Number Plate"
            android:paddingLeft="@dimen/_80sdp"
            android:paddingRight="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/trans"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/tv_time"
            android:textSize="16dp"
            android:visibility="gone"
            android:text="Time"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textColor="#111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etNUmberPlate"
            android:hint="Number Plate"

            android:singleLine="true"
            android:padding="9dp"
            android:background="@drawable/edittext_reg_fields"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />






        <Button
            android:id="@+id/btn_upload"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/trans"
            android:text="Upload Car Image"
            android:textColor="#fff"
            android:textAllCaps="false" />




        <Button
            android:id="@+id/btnAddCar"
            android:text="Add Car"
            android:padding="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/button2_rounded"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
