<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="@drawable/bggg"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardMaxElevation="@dimen/_4sdp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDrivername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_14ssp"
                android:layout_marginBottom="@dimen/_2ssp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />


            <TextView
                android:id="@+id/tvFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                 android:layout_marginBottom="@dimen/_2ssp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2ssp"

                android:layout_marginBottom="@dimen/_2ssp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2ssp"
                android:layout_marginBottom="@dimen/_2ssp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2ssp"

                android:layout_marginBottom="@dimen/_2ssp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvCarname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2ssp"

                android:layout_marginBottom="@dimen/_2ssp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvCarColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2ssp"
                android:layout_marginBottom="@dimen/_2ssp"

                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvCarSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2ssp"
                android:layout_marginBottom="@dimen/_2ssp"

                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />


            <TextView
                android:id="@+id/tvCarNumPlate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_2ssp"

                android:layout_marginBottom="@dimen/_2ssp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/app_name"
                android:textSize="@dimen/_13sdp" />







            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="@dimen/_6sdp"
                android:background="@drawable/edittext_reg_fields"
                android:layout_marginRight="@drawable/ic_baseline_search_24"
                android:drawablePadding="@dimen/_3sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:textAllCaps="false"
                android:hint="Message" />





            <Button
                android:id="@+id/btnMakeRequest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="#fff"
                android:background="@drawable/trans"
                android:text="Make a Request"
                android:textAllCaps="false" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>
