<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/tvName"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_11ssp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="#000" />

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvE"
                android:layout_width="wrap_content"
                android:text="Email : "
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_4ssp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:text="saa@gmail.com"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_4ssp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPhoneno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_below="@+id/lll"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_15ssp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="#000" />


        <ImageView
            android:id="@+id/driver_call"
            android:src="@mipmap/ic_call"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginLeft="30dp"

            android:layout_toRightOf="@+id/tvPhoneno"
            android:layout_below="@+id/lll"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"/>


        <TextView
            android:id="@+id/tvratings"

            android:layout_width="match_parent"
            android:text="Reviews and Ratings"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_80ssp"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="#000" />


        <Button
            android:id="@+id/btnOk"
            android:text="OK"
            android:layout_below="@+id/tvPhoneno"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_10sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinsmedium"
            android:background="@drawable/button1_rounded"
            android:layout_width="@dimen/_80ssp"
            android:layout_height="@dimen/_30ssp" />


    </RelativeLayout>

</ScrollView>

