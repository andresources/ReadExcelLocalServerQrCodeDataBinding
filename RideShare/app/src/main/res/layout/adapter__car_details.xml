<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_1sdp"
        android:layout_margin="@dimen/_4sdp"
        app:cardBackgroundColor="#fdecb2"
        android:background="@drawable/spp"
        app:cardMaxElevation="@dimen/_3sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvName"
                android:text="Name"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:textSize="@dimen/_13sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvColor"
                android:text="Color"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"
                android:layout_below="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:id="@+id/carimg"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:elevation="10dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_marginLeft="6dp"
                android:layout_alignParentRight="true"


                android:layout_marginRight="@dimen/_13sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp" />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/TvCplate"
                android:text="Number Plate"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:layout_below="@+id/tvColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/carimg"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
                >

                <Button
                    android:id="@+id/imageEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Edit"
                    android:drawableLeft="@drawable/ic_baseline_edit_24"
                    android:background="@drawable/trans"
                    />


                <Button
                    android:id="@+id/imageDelete"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Delete"
                    android:drawableLeft="@drawable/ic_baseline_delete_24"
                    android:background="@drawable/trans"
                    />

            </LinearLayout>

<!--            <ImageView-->
<!--                android:id="@+id/imageEdit"-->
<!--                android:src="@drawable/ic_baseline_edit_24"-->
<!--                android:layout_below="@+id/carimg"-->
<!--                -->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="40dp" />-->



