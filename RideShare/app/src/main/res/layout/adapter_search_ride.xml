<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="2dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true">

        <TextView

            android:text="Location"
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="#000"
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >



            <TextView
                android:id="@+id/tvFrom"
                android:text="From"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvTo"
                android:text="To"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:textColor="#000"
                android:fontFamily="@font/poppinsmedium"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/carImage"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@+id/tvTo"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:src="@drawable/logo"
                app:civ_border_width=".5dp"
                app:civ_border_color="#FF000000"/>

            <!--  <TextView
                  android:id="@+id/tv_price"
                  android:text="Price"
                  android:layout_marginLeft="6dp"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="@dimen/_15sdp"
                  android:layout_marginRight="@dimen/_13sdp"
                  android:textColor="#000"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />-->


            <TextView
                android:id="@+id/tvDate"
                android:text="Date"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:textColor="#000"
                android:layout_below="@+id/tvFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/tvTime"
                android:text="Time"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:textColor="#000"
                android:layout_below="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvPrice"
                android:text="Price"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:textColor="#000"
                android:layout_below="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnBook"
                android:text="Book"
                android:fontFamily="@font/poppinsmedium"
                android:layout_below="@+id/tvPrice"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textAllCaps="false"
                android:background="@drawable/button1_rounded"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/driver_msg"
                android:src="@mipmap/ic_msgg"
                android:layout_marginTop="@dimen/_10ssp"
                android:layout_marginLeft="30dp"

                android:layout_toRightOf="@+id/btnBook"
                android:layout_below="@+id/tvTime"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"/>

            <ImageView
                android:id="@+id/driver_details"
                android:src="@drawable/ic_baseline_person_pin_24"
                android:layout_marginTop="@dimen/_30ssp"
                android:layout_marginRight="@dimen/_25ssp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tvTime"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>